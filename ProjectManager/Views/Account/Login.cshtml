
@model LoginUserDto

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class=" text-primary">Login</h2>
        </div>
        <div class="mb-3 row pt-1">
            <label asp-for="UserName" class="text-black p-0">User Name</label>
            <input asp-for="UserName" class=" form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>

        </div>
        <div class="mb-3 row pt-1">
            <label asp-for="Password" class="text-black p-0"></label>
            <input asp-for="Password" class=" form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>

        </div>
        <div class="row justify-content-center">
            <div class="col-6 col-md-3 align-content-center">
                <button type="submit" class="btn btn-primary form-control">Log In</button>
            </div>
            <div class="col-6  col-md-3 ">
                <a  asp-action="Register" class="border btn btn-outline-secondary form-control">
                    Register?
                </a>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

