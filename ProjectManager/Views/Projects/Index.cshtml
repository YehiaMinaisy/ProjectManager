@model List<Project>
<div class=" container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Projects List
            </h2>
        </div>
        <div class=" col-6 text-end">
            <a asp-controller="Projects" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Project
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th> Project Name</th>
                <th> Project Description</th>
                <th></th>

            </tr
        </thead>
        <tbody>
            @foreach(var project in Model)
            {
                <tr>
                    <td>@project.ProjectName</td>
                <td>@project.ProjectDescription</td>
                <td>
                    <div class=" w-75 btn-group" role="group">
                        <a asp-controller="Projects" asp-action="Edit" asp-route-id="@project.ProjectId" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                        </a>

                        <a asp-controller="Projects" asp-action="Details" asp-route-id="@project.ProjectId" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Details
                        </a>
                            <a asp-controller="Projects" asp-action="Delete" asp-route-id="@project.ProjectId" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                    </div>
                </td> 
                    
                </tr>
                

                
            }
        </tbody>
    </table>
</div>
